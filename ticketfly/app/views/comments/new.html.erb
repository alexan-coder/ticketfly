<h1>Add a New Post</h1>

<%= form_for @post do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :venue_name %><br>
		<%= f.text_field :venue_name %>
	</p>

	<p>
		<%= f.label :user_name %><br>
		<%= f.text_field :user_name %>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_field :body %>
	</p>

	<p>
		<%= f.tsubmit "Add a New Comment" %>
	</p>
<% end %>